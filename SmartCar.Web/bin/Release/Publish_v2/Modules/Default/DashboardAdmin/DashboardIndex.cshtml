@model SmartCar.Default.DashboardAdminPageModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["PageId"] = "Dashboard";
}

@section Head {
@Html.StyleBundle("Pages/Dashboard")
}

@section ContentHeader {
    <h1>Dashboard</h1>
}

<!-- Main row -->
<div class="row" style="">
    <div class="col-md-6">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Trong ngày</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Tài khoản</th>
                            <th>Đã nhận</th>
                            <th>Đã xử lý</th>
                            <th>Không nghe máy</th>
                            <th>Không có nhu cầu</th>
                            <th>Hẹn gọi lại</th>
                            <th>Ðồng ý mua hàng</th>
                        </tr>
                        @Html.Raw(Model.DuLieuNgay)
                    </tbody>
                </table>
            </div>
        </div><!-- /.box -->
    </div>
    <div class="col-md-6">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Trong tuần</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Tài khoản</th>
                            <th>Đã nhận</th>
                            <th>Đã xử lý</th>
                            <th>Không nghe máy</th>
                            <th>Không có nhu cầu</th>
                            <th>Hẹn gọi lại</th>
                            <th>Ðồng ý mua hàng</th>
                        </tr>

                        @Html.Raw(Model.DuLieuTuan)
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div>
    </div>
</div><!-- /.row (main row) -->
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Trong tháng</h3>
                <div class="box-tools">
                    <div class="input-group" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search">
                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Tài khoản</th>
                            <th>Đã nhận</th>
                            <th>Đã xử lý</th>
                            <th>Không nghe máy</th>
                            <th>Không có nhu cầu</th>
                            <th>Hẹn gọi lại</th>
                            <th>Ðồng ý mua hàng</th>
                        </tr>
                        @Html.Raw(Model.DuLieuThang)
                    </tbody>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>